<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_margin="2dp"
    card_view:cardCornerRadius="20dp"
    android:layout_height="match_parent"
    card_view:cardUseCompatPadding="true"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="70dp"
            android:layout_height="45dp"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            card_view:layout_constraintEnd_toStartOf="@+id/nameTxt"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:srcCompat="@drawable/ic_person_pin"
            tools:srcCompat="@drawable/ic_person_pin" />

        <TextView
            android:id="@+id/nameTxt"
            android:layout_width="224dp"
            android:layout_height="28dp"
            android:layout_marginEnd="44dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/design_default_color_on_secondary"
            android:textSize="15sp"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toEndOf="@+id/imageView4"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/posTxt"
            android:layout_width="225dp"
            android:layout_height="28dp"
            android:layout_marginEnd="4dp"
            android:textColor="@color/design_default_color_on_secondary"
            android:textSize="14sp"
            card_view:layout_constraintBottom_toBottomOf="@+id/imageView4"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintStart_toStartOf="@+id/nameTxt"
            card_view:layout_constraintTop_toBottomOf="@+id/nameTxt" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>

